<!DOCTYPE html>  
<html lang="en">  
<head>  
    <meta charset="utf-8" />  
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
    <title>@ViewData["Title"] - Cafeteria_Credit___Ordering_System</title>  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />  
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>  
<body>   
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/">Cafeteria Credit</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="/Employees">Employees</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Employees/Deposit">Deposit</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Restaurants">Restaurants</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Orders/MyOrders?employeeNumber=S123">My Orders</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Orders/AdminOrders">Admin Panel</a></li>
                    </ul>
                </div>
            </div>
        </nav>  
    <div class="container mt-4">  
          
            @RenderBody()  
       
    </div>  

    <footer class="bg-light text-center text-muted py-3 mt-5">
        <div class="container">
            <small>&copy; @DateTime.Now.Year - Cafeteria Credit & Ordering System. All rights reserved.</small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>  
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>  
    <script src="~/js/site.js" asp-append-version="true"></script>  
    @await RenderSectionAsync("Scripts", required: false)  
</body>  
</html>
