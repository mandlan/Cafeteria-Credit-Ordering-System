@model IEnumerable<Cafeteria_Credit___Ordering_System.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h2>Employees</h2>

<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Employee #</th>
            <th>Balance</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.EmployeeNumber</td>
                <td>R @emp.balance.ToString("0.00")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-sm btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add Employee</a>