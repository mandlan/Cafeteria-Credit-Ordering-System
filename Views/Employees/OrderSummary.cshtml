
@{
    ViewData["Title"] = "View";
}

@model Order

<div class="card p-4 shadow-sm">
    <h3 class="mb-3 text-success">🎉 Order Placed Successfully!</h3>
    <p>Thank you, @Model.Employee.Name. Your order was received on <strong>@Model.OrderDate.ToShortDateString()</strong>.</p>

    <h5 class="mt-3">Order Summary:</h5>
    <ul class="list-group mb-3">
        @foreach (var item in Model.OrderItems)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @item.MenuItem.Name (x@item.Quantity)
                <span>R @item.Price * @item.Quantity = R @(item.Price* item.Quantity)</span>
            </li>
        }
    </ul>

    <p class="fw-bold">Total: R @Model.TotalAmount</p>
    <p>Status: <span class="badge bg-warning text-dark">@Model.Status</span></p>

    <a href="/Dashboard" class="btn btn-primary mt-3">Go to Dashboard</a>
</div>

