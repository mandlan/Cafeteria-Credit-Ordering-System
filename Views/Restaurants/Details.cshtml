@model Cafeteria_Credit___Ordering_System.Models.Restaurant  

@{  
    ViewData["Title"] = "Details";  
    var employeeNumber = ViewData["EmployeeNumber"] as string; 
}  
<h2>Menu - @Model.Name</h2>  

<form asp-action="PlaceOrder" method="post">  
    <table class="table table-bordered">  
        <thead>  
            <tr>  
                <th>Item</th>  
                <th>Description</th>  
                <th>Price</th>  
                <th>Quantity</th>  
            </tr>  
        </thead>  
        <tbody>  
            @foreach (var item in Model.MenuItems)  
            {  
                <tr>  
                    <td>@item.Name</td>  
                    <td>@item.Description</td>  
                    <td>R @item.Price</td>  
                    <td><input type="number" name="SelectedItems[@item.Id].Quantity" class="form-control" min="0" /></td>  
                </tr>  
            }  
        </tbody>  
    </table>  

    <input type="hidden" name="EmployeeNumber" value="@employeeNumber" />  
    <button type="submit" class="btn btn-success">Place Order</button>  
</form>