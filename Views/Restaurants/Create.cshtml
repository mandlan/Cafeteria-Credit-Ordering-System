@model Cafeteria_Credit___Ordering_System.Models.Restaurant

@{
    ViewData["Title"] = "Create";
}

<div class="card p-4">
    <h3>Add New Restaurant</h3>
    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LocationDescription" class="form-label"></label>
            <input asp-for="LocationDescription" class="form-control" />
            <span asp-validation-for="LocationDescription" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Save</button>
    </form>
</div>